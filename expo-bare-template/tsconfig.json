{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "esnext"
    ],
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.cjs",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
